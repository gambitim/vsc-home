{
	"name": "core",
	"displayName": "Home",
	"description": "Homecoming dashboard for VSCode",
	"version": "0.0.1-alpha.8",
	"publisher": "vsch",
	"engines": {
		"vscode": "^1.51.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:vsch.openMainView"
	],
	"main": "./dist/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/githrdw/vsc-home"
	},
	"contributes": {
		"commands": [
			{
				"command": "vsch.openMainView",
				"title": "Open VSC-Home dashboard"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "home",
					"title": "Home",
					"icon": "./assets/logo_vschome.white.min.png"
				}
			]
		},
		"views": {
			"home": [
				{
					"type": "webview",
					"id": "vsch.openSidebarView",
					"name": "Settings",
					"contextualTitle": "Home"
				}
			]
		},
		"configuration": {
			"title": "Home",
			"properties": {
				"home.openOnStartup": {
					"type": "string",
					"default": "whenBlank",
					"enum": [
						"always",
						"whenBlank",
						"never"
					],
					"enumDescriptions": [
						"Opens dashboard always when opening a new VS Code window",
						"Opens dashboard when opening a new blank VS Code window",
						"Only opens dashboard by hand from the sidebar or command prompt"
					],
					"description": "Defines when the dashboard should automatically open."
				},
				"home.configDirectory": {
					"type": "string",
					"default": "",
					"markdownDescription": "Specifies the folder path containing the Home configuration files to use. `%APPDATA%/vsch-home` when empty."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@vsch/sidebar": "^0.0.1-alpha.6",
		"@vsch/ui": "^0.0.1-alpha.8"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^14.14.25",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "7.21.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"raw-loader": "^4.0.2",
		"ts-loader": "^8.0.17",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"webpack": "5.24.2",
		"webpack-cli": "^4.2.0"
	}
}
