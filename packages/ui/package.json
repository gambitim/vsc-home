{
  "name": "@vsch/ui",
  "version": "0.0.0",
  "description": "Frontend for VSC Home",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve",
    "watch": "nodemon --watch \"src/**/**\" --ext \"ts,tsx,js,json\" --exec npm run build",
    "build": "cross-env NODE_ENV=production webpack",
    "format": "prettier --write 'packages/**/*.js'",
    "snap": "react-snap"
  },
  "lint-staged": {
    "*.{ts,tsx,scss,css,md}": [
      "prettier --write --single-quote",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Ruben",
  "license": "mpl-2.0",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "dependencies": {
    "@chakra-ui/icons": "1.0.5",
    "@chakra-ui/react": "1.3.3",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "core-js": "3.8.3",
    "framer-motion": "^3.3.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-grid-layout": "^1.2.0",
    "react-icons": "^4.2.0",
    "recoil": "^0.1.2",
    "slate": "^0.59.0",
    "slate-react": "^0.59.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-grid-layout": "^1.1.1",
    "@typescript-eslint/parser": "^4.14.2",
    "browserslist": "4.16.3",
    "clean-webpack-plugin": "3.0.0",
    "cross-env": "7.0.3",
    "css-loader": "5.0.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-watch": "7.0.0",
    "eslint-webpack-plugin": "2.5.1",
    "fibers": "^5.0.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.1.0",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "1.3.7",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react-snap": "^1.23.0",
    "sass": "1.32.7",
    "sass-loader": "11.0.1",
    "style-loader": "2.0.0",
    "terser-webpack-plugin": "5.1.1",
    "ts-loader": "8.0.17",
    "webpack": "5.22.0",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  },
  "reactSnap": {
    "source": "dist"
  }
}
